<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Bootstrap User Management Data Table</title>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto|Varela+Round">
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

    <style>
        .table-responsive {
            margin: 30px 0;
        }

        .table-wrapper {
            min-width: 1000px;
            background: #fff;
            padding: 20px 25px;
            border-radius: 3px;
            box-shadow: 0 1px 1px rgba(0, 0, 0, .05);
        }

        .table-title {
            padding-bottom: 15px;
            background: gray;
            color: #fff;
            padding: 16px 30px;
            margin: 0px 0px 10px;
            border-radius: 3px 3px 0 0;
        }

        .table-title h2 {
            margin: 5px 0 0;
            font-size: 24px;
        }

        .table-title .btn {
            color: #566787;
            float: right;
            font-size: 13px;
            background: #fff;
            border: none;
            min-width: 50px;
            border-radius: 2px;
            border: none;
            outline: none !important;
            margin-left: 10px;
        }

        .table-title .btn:hover,
        .table-title .btn:focus {
            color: #566787;
            background: #f2f2f2;
        }

        .table-title .btn i {
            float: left;
            font-size: 21px;
            margin-right: 5px;
        }

        .table-title .btn span {
            float: left;
            margin-top: 2px;
        }

        table.table tr th,
        table.table tr td {
            border-color: #e9e9e9;
            padding: 12px 15px;
            vertical-align: middle;
        }

        table.table tr th:first-child {
            width: 60px;
        }

        table.table tr th:last-child {
            width: 100px;
        }

        table.table-striped tbody tr:nth-of-type(odd) {
            background-color: #fcfcfc;
        }

        table.table-striped.table-hover tbody tr:hover {
            background: #f5f5f5;
        }

        table.table th i {
            font-size: 13px;
            margin: 0 5px;
            cursor: pointer;
        }

        table.table td:last-child i {
            opacity: 0.9;
            font-size: 22px;
            margin: 0 5px;
        }

        table.table td a {
            font-weight: bold;
            color: #566787;
            display: inline-block;
            text-decoration: none;
        }

        table.table td a:hover {
            color: #2196F3;
        }

        table.table td a.edit {
            color: #2196F3;
        }

        table.table td a.delete {
            color: #F44336;
        }

        table.table td a.add {
            color: green;
        }

        table.table td i {
            font-size: 19px;
        }

        table.table .avatar {
            border-radius: 50%;
            vertical-align: middle;
            margin-right: 10px;
        }

        .status {
            font-size: 30px;
            margin: 2px 2px 0 0;
            display: inline-block;
            vertical-align: middle;
            line-height: 10px;
        }

        .text-success {
            color: #10c469;
        }

        .text-info {
            color: #62c9e8;
        }

        .text-warning {
            color: #FFC107;
        }

        .text-danger {
            color: #ff5b5b;
        }

        .pagination {
            float: right;
            margin: 0 0 5px;
        }

        .pagination li a {
            border: none;
            font-size: 13px;
            min-width: 30px;
            min-height: 30px;
            color: #999;
            margin: 0 2px;
            line-height: 30px;
            border-radius: 2px !important;
            text-align: center;
            padding: 0 6px;
        }

        .pagination li a:hover {
            color: #666;
        }

        .pagination li.active a,
        .pagination li.active a.page-link {
            background: #03A9F4;
        }

        .pagination li.active a:hover {
            background: #0397d6;
        }

        .pagination li.disabled i {
            color: #ccc;
        }

        .pagination li i {
            font-size: 16px;
            padding-top: 6px
        }

        .hint-text {
            float: left;
            margin-top: 10px;
            font-size: 13px;
        }
    </style>
    <script>
        $(document).ready(function () {
            let usersType = "<%= userType %>";

            $('[data-toggle="tooltip"]').tooltip();
            $(".edit").on('click', function () {
                let editForm = $('#editFormDiv');
                let cols = $(this).closest("tr").children('td');
                let i = 1;
                $('#editFormDiv').css("display", "block");
                $("#editUserName").val($(cols[i++]).text());
                $("#editUserEmail").val($(cols[i++]).text());
                $("#editUserPhone").val($(cols[i++]).text());
                if (usersType === 'Admin') {
                    console.log("usertype: ", $(cols[i]).text());
                    $("#editUserType").val($(cols[i++]).text());
                }
                $("#editUserCity").val($(cols[i++]).text());
                if (usersType === 'Admin') {
                    $("#editUserPsw").val($(cols[i++]).text());
                }

            });
            $(".delete").on('click', function () {
                let editForm = $('#editFormDiv');
                let cols = $(this).closest("tr").children('td');
                deleteUser = {
                        "email": $(cols[2]).text()
                }
                console.log(JSON.stringify(deleteUser));
                let res = fetch('/deleteuser', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify(deleteUser),
                });
                $('#editFormDiv').css("display", "none");

            });
            $('#addUser').on('click', function () {
                let signupForm = $('#signupFormDiv');
                if (signupForm.css("display") === "block") {
                    $('#signupFormDiv').css("display", "none");
                } else {
                    $('#signupFormDiv').css("display", "block");
                }
            });
            $('#refreshUsers').on('click', function () {
                console.log("refresh")
                loadUsers();
            });
            function loadUsers() {
                $.ajax({
                    type: "GET",
                    url: "/users" + window.location.search,
                    success: function (res) {
                        console.log("res: ", res);
                        $("#main").html(res);
                    }
                });
            }
            $('#addUserBtn').on('click', function () {
                console.log("add user btn");
                let newUser;
                if (usersType === 'Admin') {
                    newUser = {
                        "email": $('#newUserEmail').val(),
                        "password": $('#newUserPsw').val(),
                        "name": $('#name').val(),
                        "phone": $('#phone').val(),
                        "type": $('#type').val(),
                        "city": $('#city').val(),
                        "flag": true
                    };
                } else {
                    newUser = {
                        "email": $('#newUserEmail').val(),
                        "password": $('#newUserPsw').val(),
                        "name": $('#name').val(),
                        "phone": $('#phone').val(),
                        "type": "Client",
                        "city": $('#city').val(),
                        "flag": true
                    };
                }

                console.log(JSON.stringify(newUser));
                $. fetch('/newuser', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify(newUser)
                });
                $('#signupFormDiv').css("display", "none");

            });
            $('#editUserBtn').on('click', function () {
                console.log("edit user btn");
                let updatedUser;
                if (usersType === 'Admin') {
                    updatedUser = {
                        "email": $('#editUserEmail').val(),
                        "password": $('#editUserPsw').val(),
                        "name": $('#editUserName').val(),
                        "phone": $('#editUserPhone').val(),
                        "type": $('#editUserType').val(),
                        "city": $('#editUserCity').val(),
                        "flag": true
                    };
                } else {
                    updatedUser = {
                        "email": $('#editUserEmail').val(),
                        "name": $('#editUserName').val(),
                        "phone": $('#editUserPhone').val(),
                        "type": "Client",
                        "city": $('#editUserCity').val(),
                        "flag": true
                    };
                }
                console.log(JSON.stringify(updatedUser));
                let res = fetch('/updateuser', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify(updatedUser),
                });
                $('#editFormDiv').css("display", "none");
            })
        });
    </script>
</head>

<div id="signupFormDiv" class="new-user-form-popup">
    <form class="form-container new-user-form-container" onsubmit="return false">
        <h1>New User</h1>
        <p>Please fill in this form to create an account.</p>
        <div style="width:50%;float:left;">

            <label for="email"><b>Email</b></label>
            <input type="email" placeholder="Enter Email" id="newUserEmail" name="email" required>

            <label for="psw"><b>Password</b></label>
            <input type="password" placeholder="Enter Password" id="newUserPsw" name="psw" required>

            <label for="name"><b>Name</b></label>
            <input type="text" placeholder="Enter Name" id="name" name="name" required>
        </div>
        <div style="width:50%;float:left;">

            <label for="phone"><b>Phone Number</b></label>
            <input type="tel" placeholder="Enter Phone Number" id="phone" name="phone" required>
            <% if(userType === "Admin") { %>
            <label for="type"><b>Type</b></label>
            <select placeholder="Enter Type" id="type" name="type" required>
                <option value="Admin">Admin</option>
                <option value="Officer">Officer</option>
                <option value="Client">Client</option>
            </select>
            <% } %>
            <label for="city"><b>City</b></label>
            <input type="text" placeholder="Enter City" id="city" name="city" required>
        </div>
        <button type="submit" class="btn" id='addUserBtn'>Add User</button>
    </form>
</div>
<div class="table-title">
    <div class="row">
        <div class="col-sm-5">
            <h2>User <b>Management</b></h2>
        </div>
        <div class="col-sm-7">
            <a id="addUser" href="#users" class="btn btn-secondary"><i class="material-icons">&#xE147;</i> <span>Add New
                    User</span></a>
            <a id="refreshUsers" href="#users" class="btn btn-secondary"><i class="material-icons">&#xe5d5;</i>
                <span>Refresh</span></a>

        </div>
    </div>
</div>
<table id="usersTable" class="table table-striped table-hover">
    <thead>
        <tr>
            <th>#</th>
            <th>Name</th>
            <th>Email</th>
            <th>Phone</th>
            <% if(userType === "Admin") { %>
            <th>Role</th>
            <% } %>
            <th>City</th>
            <% if(userType === "Admin") { %>
            <th>Password</th>
            <% } %>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        <% for(var i=0; i < users.length; i++) { %>
        <tr id="cl">
            <td><%= i+1 %></td>
            <td id="name" class="name"><%= users[i].name %></td>
            <td><%= users[i].email %></td>
            <td><%= users[i].phone %></td>
            <% if(userType === "Admin") { %>
            <td><%= users[i].type %></td>
            <% } %>
            <td><%= users[i].city %></td>
            <% if(userType === "Admin") { %>
            <td><%= users[i].password %></td>
            <% } %>
            <td>
                <a href="#users" class="edit" title="Edit" data-toggle="tooltip"><i
                        class="material-icons">&#xe3c9;</i></a>
                <a href="#users" class="delete" title="Delete" data-toggle="tooltip"><i
                        class="material-icons">&#xE5C9;</i></a>
            </td>
        </tr>
        <% } %>
    </tbody>
</table>

<div id="editFormDiv" class="new-user-form-popup">
    <form class="form-container new-user-form-container" onsubmit="return false">
        <h1>Edit User</h1>
        <p>Please fill in this form to update the account.</p>
        <div style="width:50%;float:left;">

            <label for="email"><b>Email</b></label>
            <input type="email" placeholder="Enter Email" id="editUserEmail" name="email" readonly>
            <% if(userType === "Admin") { %>
            <label for="psw"><b>Password</b></label>
            <input type="text" placeholder="Enter Password" id="editUserPsw" name="psw" required>
            <% } %>
            <label for="name"><b>Name</b></label>
            <input type="text" placeholder="Enter Name" id="editUserName" name="name" required>
        </div>
        <div style="width:50%;float:left;">

            <label for="phone"><b>Phone Number</b></label>
            <input type="tel" placeholder="Enter Phone Number" id="editUserPhone" name="phone" required>
            <% if(userType === "Admin") { %>
            <label for="type"><b>Type</b></label>
            <select placeholder="Enter Type" id="editUserType" name="type" required>
                <option value="Admin">Admin</option>
                <option value="Officer">Officer</option>
                <option value="Client">Client</option>
            </select>
            <% } %>
            <label for="city"><b>City</b></label>
            <input type="text" placeholder="Enter City" id="editUserCity" name="city" required>
        </div>
        <button type="submit" class="btn" id='editUserBtn'>Edit User</button>
    </form>
</div>